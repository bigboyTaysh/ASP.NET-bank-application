@model IEnumerable<BankApplication.Models.Profile>

@{
    ViewBag.Title = "Użytkownicy";
}

<h2></h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Dodaj pracownika", "Create", null, new { @class = "btn btn-default pull-right" })
    }
    else
    {
        @Html.ActionLink("Dodaj klienta", "Create", null, new { @class = "btn btn-default pull-right" })
    }

</p>
<table class="table">
    <tr>
        <th>
            Login
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            PESEL
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PESEL)
        </td>
    </tr>
}

</table>

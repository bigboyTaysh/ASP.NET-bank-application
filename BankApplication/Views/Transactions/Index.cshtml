@model IEnumerable<BankApplication.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Przelew", "Transfer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TransactionType.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BalanceAfterTransactionUserTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromBankAccountNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
<tr>
    @if (item.TransactionType.Type == "TRANSFER")
    {
        <td>
            Przelew
        </td>
    }
    <td>
        @Html.DisplayFor(modelItem => item.Value)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BalanceAfterTransactionUserTo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FromBankAccountNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.ID })
    </td>
</tr>
}

</table>

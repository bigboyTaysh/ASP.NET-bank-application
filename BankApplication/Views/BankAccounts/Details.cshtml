@model BankApplication.Models.BankAccount

@{
    ViewBag.Title = "Szczegóły";
}

<h2></h2>

<div>
    <h4>Szczegóły konta</h4>
    <hr />
    <div class="col-xs-6">
        <span class="gray-text">
            Typ konta
        </span>
        <br />
        <span>
            @if (@Model.BankAccountType.Type == "PAY_ACC_FOR_YOUNG")
            {
                @:Konto dla młodych
            }
            else if (@Model.BankAccountType.Type == "PAY_ACC_FOR_ADULT")
            {
                @:Superkonto
            }
            else if (@Model.BankAccountType.Type == "FOR_CUR_ACC")
            {
                @:Konto walutowe
            }
        </span>
        <br />
        <br />

        <span class="gray-text">
            @Html.DisplayNameFor(model => model.Balance)
        </span>
        <br />
        <span>
            @Html.DisplayFor(model => model.Balance)
        </span>
        <br />
        <br />

        <span class="gray-text">
            @Html.DisplayNameFor(model => model.Lock)
        </span>
        <br />
        <span>
            @Html.DisplayFor(model => model.Lock)
        </span>
        <br />
        <br />

        <span class="gray-text">
            @Html.DisplayNameFor(model => model.AvailableFounds)
        </span>
        <br />
        <span>
            @Html.DisplayFor(model => model.AvailableFounds)
        </span>
        <br />
        <br />

        <span class="gray-text">
            @Html.DisplayNameFor(model => model.BankAccountNumber)
        </span>
        <br />
        <span>
            @Html.DisplayFor(model => model.BankAccountNumber)
        </span>
        <br />
        <br />

        <span class="gray-text">
            @Html.DisplayNameFor(model => model.CreationDate)
        </span>
        <br />
        <span>
            @Model.CreationDate.ToString("dd.MM.yyyy")
        </span>
        <br />
        <br />
    </div>
</div>

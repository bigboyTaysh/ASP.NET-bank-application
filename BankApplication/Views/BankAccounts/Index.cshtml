@model PagedList.IPagedList<BankApplication.Models.BankAccount>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<script>
    $(document).ready(function () {
        $(".searchString").on("keyup", function (e) {
            var searchString = $(".searchString").val();

            var url = window.location.href;
            var sortOrder = url.split("=").pop();

            console.log("search by: " + sortOrder);

            $.ajax({
                type: "POST",
                url: "/BankAccounts",
                data: {
                    searchString: searchString,
                    sortOrder: sortOrder
                },
                datatype: "text",
                success: function (data) {
                    $('.bankAccountsResult').html(data);
                    console.log(data);
                }
            });

        });
    });
</script>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p class="pull-right">
        Find by number: @Html.TextBox("SearchString", null, new { @class = "searchString" })
    </p>
}

<div class="resultsTable">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().BankAccountType.Type)
            </th>
            <th>
                @Html.ActionLink("Bank account number", "Index", new { sortOrder = ViewBag.NumberSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Creation Date", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
        </tr>

        <tbody class="bankAccountsResult">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BankAccountType.Type)
                    </td>
                    <td>
                        @Html.ActionLink(item.BankAccountNumber, "Details", "BankAccounts", new { id = item.BankAccountTypeID }, new { @class = "btn btn-default", target = "_blank" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                        @Html.ActionLink("Stan", "Index", "Transactions", new { bankAccountNumber = item.BankAccountNumber }, new { @class = "btn btn-default", target = "_blank" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-default" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))